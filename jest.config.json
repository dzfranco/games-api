{
	"moduleFileExtensions": ["js", "jsx", "json", "ts", "tsx"],
	"transform": {
		"^.+\\.(ts|tsx)$": "ts-jest"
	},
	"testMatch": ["/**/*.spec.(ts)"],
	"testEnvironment": "node",
	"collectCoverage": true,
	"coverageReporters": ["text", "lcov"],
	"coverageDirectory": "coverage",
	"collectCoverageFrom": ["**/server/**/*.ts", "!**/node_modules/**", "!**/build/**"]
}
